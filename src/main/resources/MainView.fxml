<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.healthcareapp.controller.MainController">
    <top>
        <HBox spacing="20.0" style="-fx-padding: 20px; -fx-alignment: CENTER_LEFT;">
            <Label text="CareSync Healthcare Management System"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userInfoLabel"
                   style="-fx-font-size: 12px; -fx-text-fill: #666;" />
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8px 16px;" />
        </HBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- Patient Management Tab -->
                <Tab text="Patient Management" closable="false">
                    <VBox spacing="20.0" style="-fx-padding: 20px;">
                        <HBox spacing="10.0">
                            <TextField fx:id="firstNameField" promptText="First Name" />
                            <TextField fx:id="lastNameField" promptText="Last Name" />
                            <DatePicker fx:id="dobPicker" promptText="Date of Birth" />
                        </HBox>
                        <HBox spacing="10.0">
                            <ComboBox fx:id="genderComboBox" promptText="Gender" prefWidth="150.0" />
                            <TextField fx:id="phoneField" promptText="Phone Number" />
                            <TextField fx:id="emailField" promptText="Email" />
                        </HBox>
                        <TextArea fx:id="addressArea" promptText="Address" prefRowCount="3" />
                        <TextArea fx:id="medicalHistoryArea" promptText="Medical History" prefRowCount="4" />
                        <HBox spacing="10.0">
                            <Button fx:id="addButton" text="Add Patient" onAction="#addPatient"
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                            <Button fx:id="updateButton" text="Update Patient" onAction="#updatePatient"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                            <Button fx:id="deleteButton" text="Delete Patient" onAction="#deletePatient"
                                    style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                            <Button fx:id="clearButton" text="Clear Form" onAction="#clearForm" />
                        </HBox>
                        <TableView fx:id="patientTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
                                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0" />
                                <TableColumn fx:id="dobColumn" text="Date of Birth" prefWidth="120.0" />
                                <TableColumn fx:id="genderColumn" text="Gender" prefWidth="80.0" />
                                <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120.0" />
                                <TableColumn fx:id="emailColumn" text="Email" prefWidth="150.0" />
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>

                <!-- Appointment Management Tab -->
                <Tab text="Appointments" closable="false">
                    <fx:include fx:id="appointmentRoot" source="AppointmentView.fxml" />
                </Tab>

                <!-- Admin Panel Tab (only for Admins) -->
                <Tab text="Admin Panel" fx:id="adminTab" closable="false">
                    <VBox spacing="15.0" style="-fx-padding: 20px;">
                        <Label text="User Management" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                        <HBox spacing="10.0">
                            <Button text="Register New User" onAction="#openUserRegistration"
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                            <Button text="Manage Users" onAction="#manageUsers"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                        </HBox>
                        <TableView fx:id="usersTable" prefHeight="400.0">
                            <columns>
                                <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="60.0" />
                                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="120.0" />
                                <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="150.0" />
                                <TableColumn fx:id="roleColumn" text="Role" prefWidth="100.0" />
                                <TableColumn fx:id="userEmailColumn" text="Email" prefWidth="150.0" />
                                <TableColumn fx:id="activeColumn" text="Active" prefWidth="80.0" />
                                <TableColumn fx:id="lastLoginColumn" text="Last Login" prefWidth="150.0" />
                            </columns>
                        </TableView>

                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>

</BorderPane>

